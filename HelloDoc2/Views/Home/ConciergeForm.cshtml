        <div class="row mt-4">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" style="margin-left: 1em">First Name</label>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingInput" style="margin-left: 1em">Last Name</label>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="date" class="form-control" id="floatingPassword" placeholder="12/11/2023">
                <label for="floatingDate" style="margin-left: 1em">Date Of Birth</label>
            </div>
        </div>

        <h2 class="same-text">Patient Contact Information</h2>
        <div class="row mb-4">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="email" class="form-control" id="floatingPassword" placeholder="Password">
                <label class="t1" for="floatingEmail" style="padding-left: 2em;">Email</label>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12 ">
                <input id="phone1" type="tel" class="form-control" style="height: 60px;">
            </div>
        </div>

        <h2>Patient Location</h2>
        <div class="row mt-4 mb-2">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingInput" style="padding-left: 2em;">Room # / Suite (Optional)</label>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-4 mb-4">
            <button class="btn main-btn submit" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">Submit</button>
            <button class="btn main-btn cancel">cancel</button>
