@model DAL.ViewModel.AdminDashboardViewModel


    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />


<div class="d-flex justify-content-between align-items-center">
    <h5>Patients (New)</h5>
    <div class="d-flex">
        <button type="button" class="btn btn-info d-flex ms-1 ms-sm-2 p-sm-2 p-1 align-items-center text-light">
            <i class="bi bi-send  me-md-1"></i><span class="d-md-block d-none  px-2 ">
                Send
                Link
            </span>
        </button>
        <button type="button" class="btn btn-info d-flex ms-1 ms-sm-2 p-1 p-sm-2 align-items-center text-light">
            <i class="bi bi-pencil-square me-md-1"></i>
            <span class="d-md-block d-none px-2 ">
                Create
                Request
            </span>
        </button>
        <button type="button" class="btn btn-info d-flex ms-1 ms-sm-2 p-1 p-sm-2 align-items-center text-light">
            <i class="bi bi-arrow-up-right me-md-1"></i><span class="d-md-block d-none px-2 ">Export</span>
        </button>
        <button type="button" class="btn btn-info d-flex ms-1 ms-sm-2 p-1 p-sm-2 align-items-center text-light">
            <i class="bi bi-box-arrow-up-right me-md-1"></i><span class="d-md-block d-none px-2 ">
                Export
                All
            </span>
        </button>
        <button type="button" class="btn btn-info d-flex ms-1 ms-sm-2 p-1 p-sm-2 align-items-center text-light">
            <i class="bi bi-person-plus me-md-1"></i><span class="d-md-block d-none px-2 ">
                Request DTY
                Support
            </span>
        </button>
    </div>
</div>


<div class="mt-2 mb-2 container-fluid">
    <div class="d-md-flex justify-content-between align-items-center gap-2">

        <div class="d-md-flex gap-1">
            <form role="search" class="mb-2" >
                <!-- <i class="bi bi-search"></i> -->
                <input class="form-control" type="search" placeholder="Search" aria-label="Search" id="my-search-input">
            </form>
            <!-- Example split danger button -->

            <select class="form-select mb-2" aria-label="Default select example">
                <option selected>All Region</option>
                <option value="1">Singapore</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <div class="d-flex gap-2 align-items-center mb-2">
            <button class="btn btn-outline-secondary d-none d-md-block">All</button>
            <div type="button" class="d-md-flex gap-1 mx-auto text-center align-items-center" onclick="fetchRequests(@Model.StatusForName, '1',@Model.Regin_Short)">
                <i class="bi bi-circle-fill color_p"></i>
                <div class="common-txt">Patient</div>
            </div>
            <div type="button" class="d-md-flex gap-1 mx-auto text-center align-items-center" onclick="fetchRequests(@Model.StatusForName, '2', @Model.Regin_Short)">
                <i class="bi bi-circle-fill  color_f"></i>
                <div class="common-txt">Family/Friends</div>
            </div>
            <div type="button" class="d-md-flex gap-1 mx-auto text-center align-items-center" onclick="fetchRequests(@Model.StatusForName, '3' ,@Model.Regin_Short)">
                <i class="bi bi-circle-fill color_b"></i>
                <div class="common-txt">Business</div>
            </div>
            <div type="button" class="d-md-flex gap-1 mx-auto text-center align-items-center" onclick="fetchRequests(@Model.StatusForName, '4', @Model.Regin_Short)">
                <i class="bi bi-circle-fill color_c"></i>
                <div class="common-txt">Concierge</div>
            </div>
            <div type="button" class="d-md-flex gap-1 mx-auto text-center align-items-center" onclick="fetchRequests(@Model.StatusForName, '5', @Model.Regin_Short)">
                <i class="bi bi-circle-fill color_v"></i>
                <div class="common-txt">Vip</div>
            </div>
        </div>

    </div>
@if (Model.requestListAdminDash.Count > 0)
{


    <div class="table-responsive d-none d-sm-block">
            <table class="table" id="New">
            <thead>
                    <tr>
                    <th scope="col">Name</th>
                    @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5))
                    {
                    <th scope="col">Date Of Birth</th>   
                    }
                    @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3))
                    {
                    <th scope="col">Requestor</th>   
                    }
                    @if(Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5 || x.Status == 6))
                    {
                    <th scope="col">Physician Name</th>
                    }
                    @if (Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5 || x.Status == 6))
                    {
                    <th scope="col">Date Of Service</th>
                    }               
                    @if (Model.requestListAdminDash.Any(x => x.Status == 1))
                    {
                    <th scope="col">Requested date</th>
                    }

                    @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 6))
                    {
                        <th scope="col">Phone</th>
                    }
                    <th scope="col">Address</th>
                    @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3 || x.Status == 5))
                    {
                    <th scope="col">Notes</th>
                    }
                    <th scope="col">Chat With</th>
                    <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
  
            @foreach (var obj in Model.requestListAdminDash)
            {
                
                        <tr class="align-middle color_@obj.RequestTypeId" id="SearchData">
                    <td>@obj.Name</td>
                        @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5))
                        {
                            <td>@obj.date,@obj.month.ToString(),@obj.year</td>
                        }
                        @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3))
                        {
                            <td>@obj.Requestor</td>
                        }
                        @if (Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5 || x.Status == 6))
                        {
                            <td>@obj.Physician</td>
                        }
                        @if (Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5 || x.Status == 6))
                        {
                            <td>@obj.DateOfService</td>
                        }
                        @if (Model.requestListAdminDash.Any(x => x.Status == 1))
                        {
                            <td>@obj.RequestDate</td>   
                        }
                        @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 6))
                        {
                            <td>@obj.Phone</td>
                        }
                        <td>@obj.Address</td>
                        @if (Model.requestListAdminDash.Any(x => x.Status == 1 || x.Status == 2 || x.Status == 3 || x.Status == 5))
                        {
                        <td>@obj.Notes</td>  
                        }

                        <td class="d-flex dropdown">
                                @if (Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5 || x.Status == 6))
                                {
                                    <button class="btn btn-outline-primary me-2 text-white border-white">Patient</button>
                                }
                                <button class="btn btn-outline-primary ms-2 text-white border-white d-none d-md-block">Provider</button>

                        </td>
                            <td class="dropdown">
                                <button class="btn btn-outline-primary text-white border-white d-none d-md-block" data-bs-toggle="dropdown">Actions</button>
                                <ul class="dropdown-menu">
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 1))
                                    {
                                        <li><a class="dropdown-item" href="#">Asign Case</a></li>
                                    }
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 1))
                                    {
                                        <li><button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#exampleModal">Cancel Case</button></li>
                                    }

                                    <li><a class="dropdown-item" asp-action="ViewCase" asp-controller="Admin">View Case</a></li>

                                    @if(Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 3 || x.Status == 4 || x.Status == 5 || x.Status ==6))
                                    {
                                        <li><a class="dropdown-item" asp-action="ViewUploads" asp-controller="Admin">View Uploads</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-action="ViewNotes" asp-controller="Admin">View Notes</a></li>
                                    @if(Model.requestListAdminDash.Any(x => x.Status == 3 || x.Status == 4 || x.Status == 5 ))
                                    {
                                        <li><a class="dropdown-item" asp-action="Orders" asp-controller="Admin">Orders</a></li>
                                    }
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 3 || x.Status == 4 || x.Status == 5))
                                    {
                                        <li><a class="dropdown-item" href="#">Doctors Notes</a></li>
                                    }
                                    @if(Model.requestListAdminDash.Any(x => x.Status == 5))
                                    {
                                        <li><a class="dropdown-item" href="#">Close Case</a></li>
                                    }
                                    @if(Model.requestListAdminDash.Any(x => x.Status == 2))
                                    {
                                        <li><a class="dropdown-item" asp-action="Transfer" asp-controller="Admin">Transfer</a></li>
                                    }
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 2 || x.Status == 5))
                                    {
                                        <li><a class="dropdown-item" href="#">Clear Case</a></li>
                                    }
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 2))
                                    {
                                        <li><a class="dropdown-item" href="#">Send Agreement</a></li>
                                    }
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 1))
                                    {
                                        <li><a class="dropdown-item" href="#">Block Patient</a></li>
                                    }
                                    @if (Model.requestListAdminDash.Any(x => x.Status == 3 || x.Status == 4 || x.Status == 5))
                                    {
                                    <li><a class="dropdown-item" href="#">Encounter</a></li>
                                    }
                                </ul>
                            </td>
                </tr>
            }
        </tbody>
    </table>
</div>

}

